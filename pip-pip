def expand( list ):
    if list == []:
        return []
    token = list.pop( 0 ).lower()
    if ',' in token:
        return token.split( ',' ) + expand( list )
    elif '+' in token:
        return token.split( '+' ) + expand( list )
    return [ token ] + expand( list )

## check how
how_list = set( expand( args.how ) )
how_all = [ 'yum', 'docker', 'spack', 'github' ]
how_ALL = how_all + [ 'git-rccs' ]

if 'all' in how_list:
    how_list = how_all
