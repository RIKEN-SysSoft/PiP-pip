    errlist     = []
    for ver_str in version:
        ver = int( ver_str )
        if ver in ver_acceptable:
            pip_vers.append( abs( ver ) )
        else:
            errlist.append( ver )
    errlen = len( errlist )
    if errlen > 0:
        if errlen == 1:
            print( err_prefix, errlist.pop(0), 'is not an acceptable value of --version' )
        else:
            print( err_prefix, errlist, 'are not acceptable values of --version' )
        error = True
if len( pip_vers ) > 1:
    flag_multi = True

# check arch
