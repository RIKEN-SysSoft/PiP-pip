    errlist = []
    howlist = []
    for h in how_list:
        if h in how_ALL:
            howlist.append( h )
        else:
            errlist.append( h )
    if errlist != []:
        print( err_prefix, errlist, 'is(are) not acceptable value(s) of --how' )
        parser.print_help()
        error = True
    if howlist == []:
        error = True
    how_list = howlist
if len( how_list ) > 1:
    flag_multi = True

def check_command( command ):
    if shutil.which( command  ) == None:
        return False
    return True

no_spack = False
error = False
for h in how_list:
    if h is 'yum':
        if not check_command( 'yum' ):
            print( err_prefix, 'Unable to find YUM' )
            error = True
    if h is 'docker':
        if not check_command( 'docker' ):
            print( err_prefix, 'Unable to find DOCKER' )
            error = True
    if h is 'spack':
        if not check_command( 'spack' ):
            no_spack = True;
            if not check_command( 'git' ):
                print( err_prefix,
                       'Unable to find GIT command (required to install Spack)' )
                error = True
    if h is 'github' or h is 'git-rccs':
        if not check_command( 'git' ):
            print( err_prefix, 'Unable to find GIT command' )
            error = True

## check Linux distribution and version
